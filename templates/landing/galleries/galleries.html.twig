{% extends '/landing/base.html.twig' %}

{% block meta %}
    <meta name="robots" content="noimageindex" />
{% endblock meta %}

{% block body %}
    <div class="bg-target shape-target"></div>

    <div class="thumbnails-container">
        <div class="title">
            <h1 class="-white">Galeries photo</h1>
        </div>

        <div class="thumbnails">
            {% for gallery in galleries %}
                <a class="thumbnail -horizontal" href="{{ path('landing_gallery', { slug: gallery.slug }) }}" title="{{ gallery.title }}">
                    <header>
                        <img
                            src="{{ gallery.mainPhoto is defined and gallery.mainPhoto ? gallery.mainPhoto|imagine_filter('thumbnail') : asset('build/images/photo/cible.webp') }}"
                            alt="Photo de la galerie: {{ gallery.title }}"
                        >
                    </header>
                    <footer>
                        <p>{{ gallery.title }}</p>
                    </footer>
                </a>
            {% endfor %}
        </div>

        <div class="mt-3">
            {{ include('/shared/components/paginator.html.twig', { paginator }) }}
        </div>
    </div>
{% endblock %}

