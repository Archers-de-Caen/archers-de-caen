<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% if block('title') is defined %}{{ block('title')|trim }} | {% endif %}Les Archers de Caen</title>

        {{ include('shared/_meta.html.twig') }}
        {{ include('landing/_og.html.twig') }}
        {{ include('landing/_shema.html.twig') }}
        {{ include('shared/_link.html.twig') }}

        <!-- Permet d'afficher des preview de média, ajouté via ckeditor -->
        <script async charset="utf-8" src="//cdn.embedly.com/widgets/platform.js"></script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <input type="hidden" value="{{ message }}" data-type="{{ label }}" class="flash">
            {% endfor %}
        {% endfor %}

        {{ include('landing/_header.html.twig') }}

        <div class="body">
            {% block body %}
                <div class="page-container">
                    <div class="page-title-container">
                        <div class="page-title">
                            <h1 class="title">
                                {% if block('title') is defined %}{{ block('title') }}{% endif %}
                            </h1>
                        </div>
                    </div>

                    {% block main %}{% endblock main %}
                </div>
            {% endblock %}
        </div>

        {{ include('landing/_footer.html.twig') }}

        {% block javascript_footer %}{% endblock %}
    </body>
</html>
