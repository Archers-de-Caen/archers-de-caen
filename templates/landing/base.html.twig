{% from 'landing/_parts/social-networks.html.twig' import socialNetwork %}
<!-- Site r√©alis√© par Damien HEBERT damienhebert.fr -->
<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{% block title %}{% endblock %}{% if block('title') %} | {% endif %}Les Archers de Caen</title>

        <meta charset="UTF-8">
        <meta name="description" content="{% block description %}{% endblock %}">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="icon" href="/favicon/16x16.png" sizes="16x16">

        <!-- Permet d'afficher des preview de m√©dia, ajout√© via ckeditor -->
        <script async charset="utf-8" src="//cdn.embedly.com/widgets/platform.js"></script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <input type="hidden" value="{{ message }}" data-type="{{ label }}" class="flash">
            {% endfor %}
        {% endfor %}

        <header class="header">
            <div class="header-secondary">
                <div class="header-content">
                    <ul>
                        <li class="mr-2">{{ socialNetwork() }}</li>
                        <li><a href="{{ path(constant('App\\Http\\Landing\\Controller\\Page\\NewspaperController::ROUTE')) }}">La gazette</a></li>
                        <li><a href="{{ path(constant('App\\Http\\Landing\\Controller\\Page\\ContactController::ROUTE')) }}">Contact</a></li>
                        {# <li><a href="{{ path('app_index') }}">Espace licenci√©</a></li> #}
                        {% if is_granted(constant('App\\Domain\\Archer\\Model\\Archer::ROLE_ADMIN')) %}
                            <li><a href="{{ path('admin_index') }}">Admin</a></li>
                        {% endif %}
                        {# <li><a href="#">üîç</a></li>#}
                    </ul>
                </div>
            </div>
            <div class="header-primary">
                <div class="header-content">
                    <a href="{{ path(constant('App\\Http\\Landing\\Controller\\IndexController::ROUTE')) }}" class="header-image">
                        <img src="{{ asset('build/images/logo-archers-de-caen/logo-normal-v2.svg') }}" alt="Logo des archers de Caen">
                        <header class="logo-text">Archers de CAEN</header>
                    </a>
                    <ul>
                        <li>
                            <a href="{{ path(constant('App\\Http\\Landing\\Controller\\Actuality\\ActualitiesController::ROUTE')) }}">
                                Actualit√©s
                            </a>
                        </li>
                        <li>
                            <a href="{{ path(constant('App\\Http\\Landing\\Controller\\Page\\ClubController::ROUTE')) }}">
                                Club
                            </a>
                        </li>
                        <li>
                            <a href="{{ path(constant('App\\Http\\Landing\\Controller\\Results\\ResultsController::ROUTE')) }}">
                                R√©sultats
                            </a>
                        </li>
                        <li>
                            <a href="{{ path(constant('App\\Http\\Landing\\Controller\\Page\\SportController::ROUTE')) }}">
                                Sport
                            </a>
                        </li>
                        <li>
                            <a href="{{ path(constant('App\\Http\\Landing\\Controller\\Gallery\\GalleriesController::ROUTE')) }}">
                                Photos
                            </a>
                        </li>

                        <li>
                            <a href="{{ path(constant('App\\Http\\Landing\\Controller\\ShopController::ROUTE')) }}">
                                Boutique
                            </a>
                        </li>
                    </ul>
                    <div class="menu-responsive-btn hamburger-menu">
                        <div class="hamburger-menu-bar"></div>
                        <div class="hamburger-menu-bar"></div>
                    </div>
                </div>
            </div>
        </header>

        <div class="body">
            {% block body %}
                <div class="page-container">
                    <div class="page-title-container">
                        <div class="page-title">
                            <h1 class="title">
                                {{ block('title') }}
                            </h1>
                        </div>
                    </div>

                    {% block main %}{% endblock main %}
                </div>
            {% endblock %}
        </div>

        <footer class="footer">
            <div class="footer-container">
                <div class="menu">
                    <p>¬© Archers de Caen {{ 'now'|date('Y') }}. Tous droits r√©serv√©s.</p>
                    <ul>
                        <li>{{ socialNetwork() }}</li>

                        {% if app.environment == 'dev' or is_granted(constant('App\\Domain\\Archer\\Model\\Archer::ROLE_DEVELOPER')) %}
                            <li><a href="{{ path('landing_style_guide') }}">Guide de style</a></li>
                        {% endif %}

                        {% if app.environment == 'dev' %}
                            <li><a href="https://archers-caen.fr">Production</a></li>
                        {% endif %}

                        <li><a href="{{ path('landing_page', { slug: 'politique-de-confidentialite', type: 'p' }) }}">Politique de confidentialit√©</a></li>
                        <li><a href="{{ path('landing_page', { slug: 'reglement-int√©rieur', type: 'p' }) }}">R√®glement int√©rieur</a></li>
                        <li><a href="{{ path('landing_page', { slug: 'statuts', type: 'p' }) }}">Statuts</a></li>
                        <li><a href="{{ path('landing_page', { slug: 'labels', type: 'p' }) }}">Labels</a></li>
                        <li><a href="{{ path('landing_page', { slug: 'presse-et-medias', type: 'p' }) }}">Presse et m√©dias</a></li>
                        <li><a href="{{ path('landing_page', { slug: 'historique', type: 'p' }) }}">Historique</a></li>
                        <li><a href="{{ path(constant('App\\Http\\Landing\\Controller\\Page\\ContactController::ROUTE')) }}">Contact</a></li>
                    </ul>
                </div>

                <div class="logo">
                    <img src="{{ asset('build/images/logo-archers-de-caen/logo-normal-v2.svg') }}" alt="Logo des archers de Caen">
                </div>
            </div>
        </footer>

        {% block javascript_footer %}{% endblock %}
    </body>
</html>
