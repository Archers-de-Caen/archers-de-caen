{% extends '/landing/base.html.twig' %}

{# @var competition \App\Domain\Competition\Model\Competition #}

{% block title %}
    Résultats du {{ competition }}
{% endblock %}

{% block body %}
    <main class="page-container">

        <section class="title">
            <h1>{{ block('title') }}</h1>
        </section>

        {{ include('/landing/results/competitions/_parts/results-competition-table.html.twig', {
            results: results,
            participantCount: participantCount,
            recordCount: recordCount,
            podiumCount: podiumCount
        }) }}

        {% set season = competition.dateStart|date('m') >= 9 ? competition.dateStart|date('Y') + 1 : competition.dateStart|date('Y') %}
        <a href="{{ path('landing_results_competitions_season', { season: season }) }}"
           class="show-all-actualities"
        >
            <i data-feather="arrow-left"></i>
            <span>Revenir a la liste des compétitions</span>
        </a>
    </main>
{% endblock %}

