{% extends '/landing/base.html.twig' %}
{% from 'landing/pages/_parts/pages.html.twig' import pages %}

{% block title %}
    L’actualité du Club
{% endblock title %}

{% block description %}
    Toutes les actualités du club, résultat de concours, etc.
{% endblock description %}

{% block og %}
    <meta property="og:type" content="website" />
    <meta property="og:image" content="{{ absolute_url(asset('build/images/logo-archers-de-caen/logo-normal-v2.png')) }}" />
{% endblock og %}

{% block main %}
    <div class="thumbnail-page actualities">
        <div class="thumbnails-container">
            <div class="thumbnails">
                {% for actuality in actualities %}
                    {% set route = constant('App\\Http\\Landing\\Controller\\Actuality\\ActualityController::ROUTE') %}

                    <a class="thumbnail" href="{{ path(route , { slug: actuality.slug }) }}" title="{{ actuality.title }}">
                        <img
                            src="{{ actuality.image is defined and actuality.image ? actuality.image|imagine_filter('thumbnail_medium') : asset('build/images/photo/cible.webp') }}"
                            alt="{{ actuality.title }}"
                        >
                        <p>{{ actuality.title }}</p>
                    </a>
                {% endfor %}
            </div>
        </div>

        <div class="mt-3">
            {{ include('/shared/components/paginator.html.twig', { paginator }) }}
        </div>
    </div>
{% endblock %}
