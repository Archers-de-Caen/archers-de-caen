{% extends '/landing/base.html.twig' %}
{% from '/landing/actualities/actualities.html.twig' import actualities %}
{% from 'landing/pages/_parts/pages.html.twig' import pages %}

{% block body %}
    <div class="index-page">
        <div class="hero-container">
            <div class="hero">
                <div class="title">
                    <h1>Archers de Caen</h1>
                    <h2>Le tir à l'arc <br> depuis 1964</h2>
                </div>

                <div class="thumbnails-container">
                    {{ pages(actualities) }}

                    <a href="{{ path('landing_actualities') }}" class="show-all-actualities">
                        <span>Voir toutes les actualités</span>
                        <i class="fa-solid fa-arrow-right ml-1"></i>
                    </a>
                </div>

            </div>
        </div>

        <div class="info-bar">
            <div class="label">
                <img src="{{ asset('build/images/labels/label-silver.png') }}" alt="Label argent">
            </div>
            <div class="licensees">
                <b>98</b>
                <br>
                licenciés
            </div>
            <div class="ffta">
                <img src="{{ asset('build/images/ffta-club.png') }}" alt="Logo ffta club citoyen du sport">
            </div>
        </div>

        <div class="shape-target bg-target"></div>

        <div class="presentations">
            {% for content in contents %}
                <div class="presentation">
                    <img src="{{ content.image }}" alt="">

                    <div class="content">
                        <h3>{{ content.title }}</h3>
                        <p>{{ content.description }}</p>

                        {% if content.button.text %}
                            <div class="call-to-action">
                                <a class="btn -primary" href="{{ content.button.url }}">
                                    {{ content.button.text }}
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="partners-container">
            <h2>Nos partenaires</h2>
            <div class="partners">
                {% for partner in partners %}
                    <a href="{{ path('landing_page', { slug: 'partenaires' }) }}" class="partner">
                        {% if partner.image %}
                            <img src="{{ partner.image }}" alt="Logo de {{ partner.name }}">
                        {% else %}
                            {{ partner.name }}
                        {% endif %}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
