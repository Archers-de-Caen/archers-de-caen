<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}{% if block('title') %} | {% endif %}Espace licencié | Les Archers de Caen</title>

        <link rel="icon" href="/favicon/16x16.png" sizes="16x16">

        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <div class="header-secondary">
                <div class="header-content">
                    <ul>
                        <li><a href="{{ path(constant('App\\Http\\App\\Controller\\Security\\LogoutController::ROUTE_APP_LOGOUT')) }}">Déconnexion</a></li>
                        <li><a href="{{ path(constant('App\\Http\\Landing\\Controller\\DefaultController::ROUTE_LANDING_INDEX')) }}">Retour au site</a></li>
                    </ul>
                </div>
            </div>
            <div class="header-primary">
                <div class="header-content">
                    <a href="{{ path(constant('App\\Http\\Landing\\Controller\\DefaultController::ROUTE_LANDING_INDEX')) }}" class="header-image">
                        <img src="{{ asset('build/images/logo-archers-de-caen/logo-normal-v2.svg') }}" alt="Logo des archers de Caen">
                    </a>
                    <ul>
                        <li><a href="{{ path(constant('App\\Http\\App\\Controller\\AccountController::ROUTE_APP_ACCOUNT')) }}">Mon compte</a></li>
                        <li><a href="{{ path(constant('App\\Http\\App\\Controller\\LicenseController::ROUTE_APP_LICENSE_LIST')) }}">Mes licences</a></li>
                    </ul>
                    <div class="menu-responsive-btn hamburger-menu">
                        <div class="hamburger-menu-bar"></div>
                        <div class="hamburger-menu-bar"></div>
                    </div>
                </div>
            </div>
        </header>

        <div class="body">
            {% block body %}
                <div class="page-container">
                    <div class="page-title-container">
                        <div class="page-title">
                            <h1 class="title">
                                {{ block('title') }}
                            </h1>
                        </div>
                    </div>

                    {% block main %}{% endblock main %}
                </div>
            {% endblock %}
        </div>

        <footer class="mt-3"></footer>
    </body>
</html>
