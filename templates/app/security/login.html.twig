{% extends 'app/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path(constant('App\\Http\\App\\Controller\\Security\\LoginController::ROUTE_APP_LOGIN')) }}" method="post" class="form-groups w-50 m-a mt-3">
        <div class="form-group">
            <label for="identifier">Email</label>
            <input type="text" id="identifier" name="identifier" value="{{ last_username }}"/>
        </div>

        <button type="submit" class="btn -primary w-100 mt-4">Connexion</button>

        <hr class="my-3">

        <a
            href="{{ path(constant('App\\Http\\App\\Controller\\Security\\RegisterController::ROUTE_APP_REGISTER')) }}"
            class="btn -primary w-100"
        >
            S'inscrire
        </a>
    </form>
{% endblock %}
