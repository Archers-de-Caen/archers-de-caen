{# @var competition \App\Domain\Result\Model\ResultCompetiton #}

{% extends layout %}

{% block body %}
    <h1>{{ competition|capitalize }}</h1>

    {{ include('/landing/results/competitions/_parts/results-competition-table.html.twig', {
        competition: competition,
        results: results,
        participantCount: participantCount,
        recordCount: recordCount,
        podiumCount: podiumCount
    }) }}

    <table width="100%" cellpadding="0" cellspacing="0" role="presentation" style="margin-top: 1rem; width: 100%; text-align: center">
        <tr>
            <td align="center">
                <a href="{{ absolute_url(path(constant('App\\Http\\Landing\\Controller\\Results\\CompetitionController::ROUTE'), { slug: competition.slug })) }}"
                   class="button button-primary"
                >
                    Voir les résultats
                </a>
            </td>
        </tr>
    </table>
{% endblock %}

{% block footer_link %}
    <tr>
        <td align="center">
            <a href="{{ absolute_url(path(constant('App\\Http\\Landing\\Controller\\Page\\NewsletterController::ROUTE'))) }}">
                Se désinscrire
            </a>
        </td>
    </tr>
{% endblock %}
