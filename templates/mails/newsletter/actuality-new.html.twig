{# @var actuality \App\Domain\Cms\Model\Page #}

{% extends layout %}

{% block body %}

    <h1>{{ actuality.title }}</h1>

    {% if actuality.image %}
        <table>
            <tr>
                <td>
                    <img src="{{ absolute_url(vich_uploader_asset(actuality.image, 'imageFile')) }}" alt="{{ actuality.image.imageName }}">
                </td>
            </tr>
        </table>
    {% endif %}

    {{ actuality.content|raw }}

    <table width="100%" cellpadding="0" cellspacing="0" role="presentation" style="margin-top: 1rem">
        <tr>
            <td align="center">
                <a href="{{ absolute_url(path(constant('App\\Http\\Landing\\Controller\\ActualitiesController::ROUTE_LANDING_ACTUALITY'), { slug: actuality.slug })) }}"
                   class="button button-primary"
                >
                    Voir l'article
                </a>
            </td>
        </tr>
    </table>

{% endblock %}
